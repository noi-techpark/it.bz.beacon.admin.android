<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item
        android:top="-8dp"
        android:left="-8dp"
        android:right="-8dp"
        android:bottom="-8dp">
        <shape
            android:shape="rectangle">
            <stroke
                android:width="8dp"
                android:color="@color/primary"
                />
        </shape>
    </item>

    <item
        android:id="@+id/corner_radius_layer"
        android:top="-8dp"
        android:left="-8dp"
        android:right="-8dp"
        android:bottom="-8dp">
        <shape
            android:shape="rectangle" >
            <stroke
                android:width="8dp"
                android:color="@color/primary"/>
            <corners
                android:topLeftRadius="12dp"
                android:topRightRadius="12dp"
                />
        </shape>
    </item>

</layer-list>